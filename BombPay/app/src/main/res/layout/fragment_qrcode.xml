<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackathon.bombpay.QRCode">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/roomTitle"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_below="@+id/roomTitle"
            android:id="@+id/roomPrice"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_below="@+id/roomPrice"
            android:id="@+id/roomPeople"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_below="@+id/roomPeople"
            android:id="@+id/roomType"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/roomType"
            android:id="@+id/roomQRcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="시작"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_below="@+id/roomQRcode"
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        
    </RelativeLayout>
    
</FrameLayout>
